extends sidebar
block div#mycontent
  
  div.caption
    i(class = "fa fa-group")
      span 
        |Groups Information
    div.table-scrollable
      table(class = "table table-striped table-bordered table-hover dataTable",id = "agents")
        thead
          tr
            td 
              span
                |Name
            td
              span
                |Description
            td
              span
                |Created By
            td
              span
                |Company    
            td
              span
                |Created On
            
        tbody
          - each object in mydata
            tr
              td= object.deptname
              td=object.deptdescription
              td=object.createdby.firstname + ' ' + object.createdby.lastname
              td=object.createdby.companyName
              td=object.creationdate
              
                

