extends sidebar
block div#mycontent
  
  ul(class="nav navbar-nav")
    li(class="active")
      a(href="/")
        span
          | Datewise Call statistics
    li
      a(href="/agentscallstats")
        span
          | Agentwise Call statistics
    li
      a(href="/groupcallstats")
        span
          | Groupwise Call statistics
  
  div(class = "caption",id = "datewisecalls")
    i(class = "fa fa-group")
      span 
        |Datewise Call Statistics
    div
    div(class = "control-group span6")
      label
        | Search :
       
      input(type="search" class="light-table-filter form-control input-medium input-inline" data-table="myTableDatewise" placeholder="Enter Date(day-mon-YYYY)")
      a(href ='/downloadcsv/',class = "downloadcsv btn btn-info")
          |Export data in CSV
   
    div.bodycontainer.table-scrollable
      table(class = "table table-striped table-bordered table-hover myTableDatewise",id = "agents")
        thead
          tr
            td 
              span
                |Date
            td
              span
                |Call Status
            td
              span
                |Count
            
            
        tbody
          - each object in mydata
            tr
              td= object._id.day+'-'+object._id.month+'-'+object._id.year
              td=object._id.callStatus
              td=object.count
        
    
              
                

