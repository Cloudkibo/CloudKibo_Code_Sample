extends sidebar
block div#mycontent
  
  div.caption
    i(class = "fa fa-user")
      span 
        |Agents Information
    div.table-scrollable
      table(class = "table table-striped table-bordered table-hover dataTable",id = "agents")
        thead
          tr
            td 
              span
                |Name
            td
              span
                |Email
            td
              span
                |Country
            td
              span
                |Company
            td
              span
                |Website
            td
              span
                |Role
            td
              span
                |IsAgent?
            td
              span
                |IsAdmin
            
        tbody
          - each object in mydata
            tr
              td= object.firstname + object.lastname
              td=object.email
              td=object.country
              td=object.companyName
              td=object.website
              td=object.role
              td=object.isAgent
              td=object.isAdmin
        
      
      a(href ='/agents/downloadcsv/',class = "downloadcsv btn btn-info")
        | Export data in CSV

